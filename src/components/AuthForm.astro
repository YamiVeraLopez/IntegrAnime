---
const { mode = 'login' } = Astro.props;
---

<form class="auth-form" id={mode === 'login' ? 'login-form' : 'register-form'}>
  {mode === 'register' && (
    <div class="form-group">
      <label for="banner-url">URL del Banner</label>
      <input 
        type="url" 
        id="banner-url" 
        placeholder="https://ejemplo.com/banner.jpg" 
        required
      />
      <small class="error-message" id="banner-error"></small>
    </div>
  )}

  {mode === 'register' && (
    <div class="form-group">
      <label for="avatar-url">URL de Foto de Perfil</label>
      <input 
        type="url" 
        id="avatar-url" 
        placeholder="https://ejemplo.com/avatar.jpg" 
        required
      />
      <small class="error-message" id="avatar-error"></small>
    </div>
  )}

  <div class="form-group">
    <label for="username">Usuario</label>
    <input 
      type="text" 
      id="username" 
      minlength="3" 
      maxlength="20" 
      required
    />
    <small class="error-message" id="username-error"></small>
  </div>

  <div class="form-group">
    <label for="password">Contraseña</label>
    <input 
      type="password" 
      id="password" 
      minlength="6" 
      required
    />
    <small class="error-message" id="password-error"></small>
  </div>

  {mode === 'register' && (
    <div class="form-group">
      <label for="confirm-password">Confirmar Contraseña</label>
      <input 
        type="password" 
        id="confirm-password" 
        required
      />
      <small class="error-message" id="confirm-error"></small>
    </div>
  )}

  <button type="submit" class="submit-btn">
    {mode === 'login' ? 'Iniciar Sesión' : 'Registrarse'}
  </button>
</form>

<style>
  .auth-form {
    max-width: 500px;
    margin: 2rem auto;
    padding: 2rem;
    background: color-mix(in oklch, var(--white) 70%, transparent);
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
    color: #333;
  }

  input {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
  }

  .error-message {
    color: #e74c3c;
    font-size: 0.8rem;
    margin-top: 0.3rem;
    display: none;
  }

  .submit-btn {
    width: 100%;
    padding: 1rem;
    background: var(--indigo);
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.3s;
  }

  .submit-btn:hover {
    background: var(--indigo);
  }
  @media (max-width: 768px) {
  .auth-form {
    padding: 1.5rem;
    margin: 1rem;
    width: auto;
  }

  input {
    padding: 0.7rem;
  }

  .submit-btn {
    padding: 0.8rem;
  }
}

@media (max-width: 480px) {
  .auth-form {
    padding: 1rem;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  label {
    font-size: 0.9rem;
  }
}
</style>