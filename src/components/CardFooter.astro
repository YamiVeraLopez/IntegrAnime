---
import Layout from "@layouts/Layout.astro";
import LinkedinLogo from "@components/icons/LinkedinLogo.astro";
import GithubLogo from "@components/icons/GithubLogo.astro";
const {img= "https://i.pinimg.com/736x/6e/4c/41/6e4c411c9c1a3843af3d402e03a966ad.jpg", name, linkLinkedin, linkGithub} = Astro.props;
---

<Layout>
	<article class="card-footer">
		<picture class="card-footer__img">
			<img
				src={img}
				alt={name}  
			/>
		</picture>
		<h5 class="card-footer__name">{name}</h5>
		<section class="card-footer__social">
			<a href={linkLinkedin} class="card-footer__social--linkedin" target="_blank" rel="noopener noreferrer">
				<LinkedinLogo
					height="25"
					width="25"
					fill="#0a66c2"
					className="icon"
				/>
			</a>
			<a href={linkGithub} class="card-footer__social--github" target="_blank" rel="noopener noreferrer">
				<GithubLogo
					height="25"
					width="25"
					fill="#333333"
					className="icon"
				/>
			</a>
		</section>
	</article>
</Layout>

<style>
	.card-footer {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		height: 180px;
		width: 120px;
        margin: 8px;
		background-color: color-mix(in oklch, var(--white) 80%, transparent);
		padding: 2rem 1rem;
		border-radius: 10px;
		box-shadow: 2px 2px 8px
			color-mix(in oklch, var(--indigo) 20%, transparent);

		.card-footer__img {
			border: 1px solid
				color-mix(in oklch, var(--indigo) 12%, transparent);
			border-radius: 50%;
			width: 100%;
			box-shadow: 2px 2px 5px
				color-mix(in oklch, var(--indigo) 20%, transparent);
			img {
				border-radius: 50%;
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
		}

		.card-footer__name {
			/* text-transform: uppercase; */
			color: var(--black);
			font-size: 0.6rem;
			margin-top: 10px;
			text-align: center;
			text-wrap: balance;
		}

		.card-footer__social {
			display: flex;
			gap: 10px;
			.card-footer__social--linkedin,
			.card-footer__social--github {
                cursor: pointer;
				.icon:hover {
					transition: all 0.3ms ease-in-out;
					filter: drop-shadow(0 0 3px var(--indigo));
				}
			}
		}
	}

	.card-footer:hover {
		cursor: pointer;
		scale: 1.05;
		transition: all 0.3ms ease-in-out;
	}
</style>
