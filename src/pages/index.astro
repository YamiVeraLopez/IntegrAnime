---
const response = await fetch('https://api.jikan.moe/v4/top/anime');
const { data: animes } = await response.json();
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Top Animes</title>
    <style>
      body {
        font-family: sans-serif;
        margin: 0;
        padding: 2rem;
        background-color: #f8f8f8;
      }

      h1 {
        text-align: center;
        margin-bottom: 2rem;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
      }

      .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        text-align: center;
        padding: 1rem;
        transition: transform 0.2s ease;
        text-decoration: none;
        color: black;
      }

      .card:hover {
        transform: translateY(-5px);
      }

      .card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 6px;
        margin-bottom: 1rem;
      }

      .card h2 {
        font-size: 1.1rem;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <h1>Top 10 Animes</h1>
    <div class="grid">
      {animes.slice(0, 10).map((anime) => (
        <a href={`/${anime.mal_id}`} class="card">
          <img src={anime.images.jpg.image_url} alt={anime.title} />
          <h2>{anime.title}</h2>
        </a>
      ))}
    </div>
  </body>
</html>
